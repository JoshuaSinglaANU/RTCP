#!/bin/bash
set -euo pipefail
home="$(realpath "$(realpath "${BASH_SOURCE[0]}" | xargs dirname)")"
cd "$home"

#-----------------------------------------------------------------------------------------------------------
source ./lib.sh
info "$0" "$@"


whisper 'STEP 1 --------------------------------------------------------------------------------------------'
procure_package "$pspgbin_path" "$pspgbin_url"
whisper 'STEP 2 --------------------------------------------------------------------------------------------'
build_pspg_binary
whisper 'STEP 5 --------------------------------------------------------------------------------------------'
link_pspg_binary




