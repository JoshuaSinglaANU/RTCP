html
  head
    title HTML Forms
    link(rel='stylesheet', href='../public/stylesheets/style.css')
  body
    nav
      ul
        li
          a(href='/') Home
        li
          a(href='/profile') Profile
        li
          a(href='/updateProfile') Change Profile
        li
          a(href='/searchProducts') Search Products
        li
          a(href='/login') Login
        li
          a(href='/createAccount') Create Account
        li
          a(href='/answer') Answer Questions 
    div.container
      h2 HTML Forms
      form(action='/searchProducts/search')
        div.form-group
          label(for='pcatagory') Product Category:
          input#pname(type='text' name='pname' placeholder='Enter product category')
        button#submit(type='submit') Search
      table
        thead
          tr
            th Product Name
            th Price
            th Quantity
        tbody
          each row in rows
            tr
              td=row.name
              td=row.price
              td=row.quantity
