doctype html
html
  head
    title Your profile
  body
    h1 Your profile
    h2 Account details
    h3 Username
    p= username 
    h3 Address
    p= address     
    h3 City
    p= city     
    h3 Country
    p= country     
    h3 Mobile
    p= mobile     
    h2 Payment details
    h3 Provider
    p= provider     
    h3 Account number
    p= accountNumber
  
  form(action='/profile/updateAvatar' enctype="multipart/form-data" method = 'post')
    input#avatar(type='file' name='file')
    input(type='submit')

        